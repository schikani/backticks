@ print_screen():
{

    let count = 0;
    loop until (count < 6)
    {
        if count == 0 or count == 5
        {
            printl(`**********************************`);
        }
        elif count == 2
        {
            printl(`*       HELLO                    *`);
        }
        elif count == 3
        {
            printl(`*             WORLD              *`);
        }
        else
        {
            printl(`*                                *`);
        }

        count += 1;
    }
}

print_screen();